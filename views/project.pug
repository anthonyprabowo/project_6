extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box
        h1= project_name
        p= description

      .project-tech-links-box.box
        h6 Technologies
        ul
          each technology in technologies
            li= technology
        a.btn-link(href=`${project_link}`, target="_blank") Live Demo
        a.btn-link(href=`${project_repo}`, target="_blank") GitHub Repo

    .project-img-box.box
      img.project-img(src=`${images[1]}`, alt='')
      img.project-img(src=`${images[2]}`, alt='')
      img.project-img(src=`${images[3]}`, alt='')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
